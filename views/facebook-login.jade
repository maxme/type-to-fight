extends layout

block pagestyle
    link(rel='stylesheet', href='/css/game.css')

block content
    script
        var errorLoc = '/facebook/error';
        var testLoc = window.location.origin.slice(window.location.origin.length - errorLoc.length);
        if (testLoc !== errorLoc) {
            window.location = '/facebook/login';
        }
    // Modal end menu
    div(class='container')
        div(class='hero-unit')
            h2='Facebook login is required'
            div='You must log into your facebook account to play the game'
            a(href='/facebook/login', class='btn btn-custom btn-green')='Click here to Login'

